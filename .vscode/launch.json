{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Basic",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/cmd/dns-lookuper",
        "args": [
            "-f",
            "${workspaceRoot}/testdata/lists/1.lst",
            "-f",
            "${workspaceRoot}/testdata/lists/2.lst"
        ]
    },
    {
        "name": "Template",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/cmd/dns-lookuper",
        "args": [
            "-f",
            "${workspaceRoot}/testdata/lists/1.lst",
            "-f",
            "${workspaceRoot}/testdata/lists/2.lst",
            "-r",
            "template",
            "-t",
            "host is {host} with address {address}"
        ]
    },
    {
        "name": "Config file",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/cmd/dns-lookuper",
        "cwd": "${workspaceRoot}",
        "args": [
            "-c",
            "testdata/configs/simple.yaml",
        ]
    },
    {
        "name": "Invalid format",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/cmd/dns-lookuper",
        "args": [
            "-f",
            "${workspaceRoot}/testdata/lists/1.lst",
            "-f",
            "${workspaceRoot}/testdata/lists/2.lst",
            "-r",
            "asdf",
        ]
    },
    {
        "name": "Invalid",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/cmd/dns-lookuper",
        "args": [
            "-f",
            "${workspaceRoot}/testdata/lists/1.lst",
            "-f",
            "${workspaceRoot}/testdata/lists/invalid.lst"
        ]
    },
    ]
}
